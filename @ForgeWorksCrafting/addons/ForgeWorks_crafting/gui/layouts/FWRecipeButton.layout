<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- Sector 88 - Individual Recipe Button Layout -->
<widget name="RecipeButtonRoot" type="ButtonWidget"
        size="0.3 0.12"
        hexcolor="#3A3A3AFF">
    
    <!-- Recipe Icon -->
    <widget name="RecipeIcon" type="ImageWidget"
            pos="0.05 0.1" size="0.35 0.8"
            stretch="keep_aspect"
            filter="false"/>
    
    <!-- Recipe Name -->
    <widget name="RecipeName" type="TextWidget"
            pos="0.42 0.3" size="0.55 0.4"
            text="Recipe Name"
            font="gui/fonts/MetronBook14"
            style="shadow"
            halign="left_ref"
            valign="center_ref"
            hexcolor="#DDDDDDFF"/>
    
    <!-- Hover/Selection Highlight -->
    <widget name="SelectionHighlight" type="ImageWidget"
            pos="0 0" size="1 1"
            stretch="true"
            hexcolor="#FFFFFF22"
            show="false"/>

</widget>
