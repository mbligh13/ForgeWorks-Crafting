                <widget name="TabHeader1" type="TextWidget"
                        pos="0 0" size="1 0.04"
                        text="WEAPONS"
                        font="gui/fonts/MetronBold18"
                        style="shadow"
                        hexcolor="#FFD700FF"/>
                
                <!-- Pistol Caliber Tabs -->
                <widget name="Tab22LR" type="ButtonWidget"
                        pos="0 0.05" size="0.49 0.06"
                        text=".22 LR Pistols"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="Tab9mm" type="ButtonWidget"
                        pos="0.51 0.05" size="0.49 0.06"
                        text="9mm Pistols"
                        font="gui/fonts/MetronBook16"/>
                
                <widget name="Tab45ACP" type="ButtonWidget"
                        pos="0 0.12" size="0.49 0.06"
