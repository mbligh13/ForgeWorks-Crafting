                        font="gui/fonts/MetronBook16"/>
                
                <!-- Rifle Caliber Tabs -->
                <widget name="Tab556" type="ButtonWidget"
                        pos="0 0.33" size="0.49 0.06"
                        text="5.56 Rifles"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="Tab545" type="ButtonWidget"
                        pos="0.51 0.33" size="0.49 0.06"
                        text="5.45 Rifles"
