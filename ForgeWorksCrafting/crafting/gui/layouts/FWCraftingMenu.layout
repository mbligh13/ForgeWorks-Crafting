                <widget name="TabMagDrum" type="ButtonWidget"
                        pos="0 0.88" size="0.49 0.06"
                        text="Drum Mags"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="TabBreakdown" type="ButtonWidget"
                        pos="0.51 0.88" size="0.49 0.06"
                        text="Breakdown"
                        font="gui/fonts/MetronBook16"
                        hexcolor="#FF4444FF"/>
            </frame>
            
            <!-- Item Selection List (scrollable) -->
            <widget name="ItemListHeader" type="TextWidget"
                    pos="0 0.46" size="1 0.03"
                    text="Select Item to Craft"
                    font="gui/fonts/MetronBook18"
                    style="shadow"
                    halign="center_ref"/>
                    
            <widget name="ItemListScroll" type="ScrollWidget"
                    pos="0 0.5" size="1 0.5">
                
                <widget name="ItemList" type="GridSpacerWidget"
                        pos="0 0" size="1 1"
                        columns="1"
                        rows="30"
                        spacing_vertical="0.005"/>
            </widget>
        </frame>
        
        <!-- ================================================= -->
        <!-- RIGHT TOP PANEL (2/3 width, 1/2 height): Preview -->
        <!-- ================================================= -->
        <frame name="RightTopPanel" 
               pos="0.34 0" 
               size="0.66 0.5">
            
            <!-- Item Name Header -->
            <widget name="ItemNameText" type="TextWidget"
                    pos="0 0" size="1 0.06"
                    text="Select an item"
                    font="gui/fonts/MetronBold28"
                    style="shadow"
                    halign="center_ref"
                    valign="center_ref"/>
            
            <!-- Preview Background Frame -->
            <widget name="PreviewFrame" type="FrameWidget"
                    pos="0.02 0.08" size="0.96 0.84"
                    hexcolor="#1A1A1AFF">
                
                <!-- Item Preview Image -->
                <widget name="ItemPreviewImage" type="ImageWidget"
                        pos="0.05 0.05" size="0.9 0.9"
                        stretch="keep_aspect"
                        filter="true"/>
            </widget>
            
            <!-- Required Materials Overlay -->
            <widget name="MaterialsRequiredText" type="TextWidget"
                    pos="0.02 0.94" size="0.3 0.04"
                    text="Materials Required:"
                    font="gui/fonts/MetronBook16"
                    style="shadow"/>
        </frame>
        
        <!-- ================================================= -->
        <!-- RIGHT BOTTOM PANEL (2/3 width, 1/2 height): Inventory/Materials -->
        <!-- ================================================= -->
        <frame name="RightBottomPanel"
               pos="0.34 0.51"
               size="0.66 0.49">
            
            <!-- Materials Grid -->
            <widget name="MaterialsGrid" type="GridSpacerWidget"
                    pos="0.02 0" size="0.96 0.7"
                    columns="6"
                    rows="3"
                    spacing_horizontal="0.01"
                    spacing_vertical="0.01"/>
            
            <!-- Crafting Time Display -->
            <widget name="CraftingTimeText" type="TextWidget"
                    pos="0.02 0.72" size="0.4 0.05"
                    text="Crafting Time: 0s"
                    font="gui/fonts/MetronBook18"
                    style="shadow"/>
            
            <!-- Required Attachments Text -->
            <widget name="AttachmentsText" type="TextWidget"
                    pos="0.02 0.78" size="0.7 0.05"
                    text="Required Tools: None"
                    font="gui/fonts/MetronBook16"
                    style="shadow"
                    hexcolor="#FFAA00FF"/>
            
            <!-- CRAFT Button -->
            <widget name="CraftButton" type="ButtonWidget"
                    pos="0.72 0.84" size="0.26 0.14"
                    text="CRAFT"
                    font="gui/fonts/MetronBold26"
                    hexcolor="#00AA00FF"
                    style="shadow"/>
        </frame>
        
    </frame>
    
    <!-- Close Button Hint -->
    <widget name="CloseHint" type="TextWidget"
            pos="0.88 0.02" size="0.1 0.03"
            text="[ESC] Close"
            font="gui/fonts/MetronBook14"
            style="shadow"
            hexcolor="#AAAAAAFF"
            halign="right_ref"/>

</window>
