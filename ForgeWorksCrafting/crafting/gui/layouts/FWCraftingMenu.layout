                        font="gui/fonts/MetronBook16"/>
                
                <!-- Shotgun Tab -->
                <widget name="Tab12Gauge" type="ButtonWidget"
                        pos="0.51 0.68" size="0.49 0.06"
                        text="12 Gauge Shotguns"
                        font="gui/fonts/MetronBook16"/>
                
                <!-- MAGAZINE TABS -->
                <widget name="TabHeader2" type="TextWidget"
                        pos="0 0.76" size="1 0.04"
                        text="MAGAZINES"
                        font="gui/fonts/MetronBold18"
                        style="shadow"
                        hexcolor="#FFD700FF"/>
                        
                <widget name="TabMagPistol" type="ButtonWidget"
                        pos="0 0.81" size="0.49 0.06"
                        text="Pistol Mags"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="TabMagRifle" type="ButtonWidget"
