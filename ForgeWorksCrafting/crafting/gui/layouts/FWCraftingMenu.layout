<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- Sector 88 Crafting Menu Layout -->
<!-- Left 1/3: Categories & Items | Right 2/3: Top=Preview, Bottom=Inventory -->
<window name="S88CraftingMenuRoot" width="1.0" height="1.0">
    
    <!-- Dark overlay background -->
    <widget name="Overlay" type="ImageWidget" 
            pos="0 0" size="1 1" 
            stretch="true" 
            color="0 0 0" 
            alpha="0.85"/>
    
    <!-- Main container panel -->
    <frame name="MainPanel" 
           pos="0.05 0.05" 
           size="0.9 0.9" 
           halign="left_ref" 
           valign="top_ref">
        
        <!-- ================================================= -->
        <!-- LEFT PANEL (1/3 width): Category Tabs & Item List -->
        <!-- ================================================= -->
        <frame name="LeftPanel" 
               pos="0 0" 
               size="0.33 1.0">
            
            <!-- Header -->
            <widget name="LeftHeader" type="TextWidget"
                    pos="0 0" size="1 0.04"
                    text="Crafting Categories"
                    font="gui/fonts/MetronBold22"
                    style="shadow"
                    halign="center_ref"/>
            
            <!-- Caliber/Category Tabs -->
            <frame name="TabsContainer"
                   pos="0 0.05" size="1 0.4">
                   
