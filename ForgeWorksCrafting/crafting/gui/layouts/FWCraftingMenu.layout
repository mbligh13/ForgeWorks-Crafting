                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="Tab939" type="ButtonWidget"
                        pos="0 0.47" size="0.49 0.06"
                        text="9x39 Rifles"
                        font="gui/fonts/MetronBook16"/>
                
                <!-- Sniper Tabs -->
                <widget name="Tab762x54R" type="ButtonWidget"
                        pos="0.51 0.47" size="0.49 0.06"
                        text="7.62x54R Snipers"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="Tab308" type="ButtonWidget"
                        pos="0 0.54" size="0.49 0.06"
                        text=".308 Snipers"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="Tab300WM" type="ButtonWidget"
                        pos="0.51 0.54" size="0.49 0.06"
                        text=".300 WM Snipers"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="Tab338" type="ButtonWidget"
                        pos="0 0.61" size="0.49 0.06"
                        text=".338 Snipers"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="Tab408" type="ButtonWidget"
                        pos="0.51 0.61" size="0.49 0.06"
                        text=".408 Snipers"
                        font="gui/fonts/MetronBook16"/>
                        
                <widget name="Tab50BMG" type="ButtonWidget"
                        pos="0 0.68" size="0.49 0.06"
